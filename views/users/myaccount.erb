<div class="form container">
  <h1 class="centertext">Account Preferences</h1>
  <% if @error != nil %>
  <h5 style="color: red;" class="centertext"><%= @error %></h5>
  <% elsif @success %>
  <h5 style="color: green;" class="centertext">Information Updated</h5>
  <% end %>
  <form action="/account" method="post">
    <label for="email">Email</label>
    <p><%= @user.email %></p>
    <label for="username">Username</label>
    <input type="text" name="username" id="username" value="<%= @user.username %>">
    <label for="firstName">First Name</label>
    <input type="text" name="first_name" id="firstName" value="<%= @user.first_name %>">
    <label for="lastName">Last Name</label>
    <input type="text" name="last_name" id="lastName" value="<%= @user.last_name %>">
    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="Enter your password to confirm any changes" required>
    <input type="button" value="Change Password" onclick="showChangePassword()" id="passwordBtn">
    <input type="password" name="new_password" id="changePassword" placeholder="This will change your password" style="display:none;">
    <label for="birthdate">Birthdate</label>
    <p><%= @user.birthdate %></p>
    <input type="submit" value="Apply">
  </form>
</div>
